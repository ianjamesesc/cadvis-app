<header class="c-header c-header-light c-header-fixed">
    <a class="c-header-brand c-header-brand-up-center" href="/" style="position: absolute; left: 50%; transform: translate(-50%, 0%)">
        <img class="c-sidebar-brand-full" id="navbar-brand-logo" src="logo/cdncvsl-500-white.png" height="40">
    </a>

    <ul class="c-header-nav mfs-auto">
        <li class="c-header-nav-item px-3 c-d-legacy-none">

        </li>
    </ul>

    <ul class="c-header-nav">
        <li class="c-header-nav-item px-1 c-d-legacy-none">
            <button class="c-class-toggler c-header-nav-btn" type="button" id="header-tooltip" onmouseup="toggleSupplierDarkMode('<%- user.id %>')" data-target="body" data-class="c-dark-theme" data-toggle="c-tooltip" data-placement="bottom" title="Toggle Light/Dark Mode">
              <svg class="c-icon c-d-dark-none">
                <use xlink:href="vendors/@coreui/icons/svg/free.svg#cil-moon"></use>
              </svg>
              <svg class="c-icon c-d-default-none">
                <use xlink:href="vendors/@coreui/icons/svg/free.svg#cil-sun"></use>
              </svg>
            </button>
        </li>
    </ul>

    <div class="c-subheader justify-content-between px-3">
        <!-- Breadcrumb-->
        <ol class="breadcrumb border-0 m-0 px-0 px-md-3">
            <% for(var i=0; i < page.split('/').length; i++){ %>
                <li class="breadcrumb-item">
                    <%- page.split('/')[i] %>
                </li>
                <% } %>

                    <!-- Breadcrumb Menu-->
        </ol>

        <div class="system-time" id="system-time">
            <ol class="breadcrumb border-0 m-0 px-0 px-md-3">
                <li class="breadcrumb-item date font-weight-bold d-none d-md-inline"></li>
                <li class="breadcrumb-item time font-weight-bold d-none d-md-inline">
                    <span class="hh"></span>
                    <span class="time-separator"> : </span>
                    <span class="mm"></span>
                    <span class="aa"></span>
                </li>
            </ol>
        </div>
    </div>
</header>

<script>
    function toggleSupplierDarkMode(id) {
        if (page.toLowerCase().includes('supplier')) {
            socket.emit('toggle-supplier-dark-theme', id, callback => {
                var response = JSON.parse(callback)
                if (response) {
                    $('body').addClass('c-dark-theme')
                    $('.c-header #navbar-brand-logo').attr(`src`, `logo/cdncvsl-500-white.png`)
                } else {
                    $('body').removeClass('c-dark-theme')
                    $('.c-header #navbar-brand-logo').attr(`src`, `logo/cdncvsl-500-dark.png`)
                }
            })
        } else {
            socket.emit('toggle-filmmaker-dark-theme', id, callback => {
                var response = JSON.parse(callback)
                if (response) {
                    $('body').addClass('c-dark-theme')
                    $('.c-header #navbar-brand-logo').attr(`src`, `logo/cdncvsl-500-white.png`)
                } else {
                    $('body').removeClass('c-dark-theme')
                    $('.c-header #navbar-brand-logo').attr(`src`, `logo/cdncvsl-500-dark.png`)
                }
            })
        }

    }
</script>