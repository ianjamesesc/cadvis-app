<html lang="en">

<head>
    <%- include ('resources/head') %>
        <title>Budget | Cadence Visual</title>
        <link type="text/css" href="css/views/budget.css" rel="stylesheet">
</head>

<body class="c-app c-no-layout-transition <%- (user.dark_theme) ? 'c-dark-theme': '' %>">
    <%- include ('layouts/sidebar.ejs') %>

        <div class="c-sidebar c-sidebar-lg c-sidebar-light c-sidebar-right c-sidebar-overlaid" id="aside">
            <button class="c-sidebar-close c-class-toggler" type="button" data-target="_parent" data-class="c-sidebar-show" responsive="true">
        <svg class="c-icon">
          <use xlink:href="vendors/@coreui/icons/svg/free.svg#cil-x"></use>
        </svg>
      </button>
            <ul class="nav nav-tabs nav-underline nav-underline-primary" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" data-toggle="tab" href="#timeline" role="tab">
                        <svg class="c-icon">
              <use xlink:href="vendors/@coreui/icons/svg/free.svg#cil-list"></use>
            </svg></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-toggle="tab" href="#messages" role="tab">
                        <svg class="c-icon">
              <use xlink:href="vendors/@coreui/icons/svg/free.svg#cil-speech"></use>
            </svg></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-toggle="tab" href="#settings" role="tab">
                        <svg class="c-icon">
              <use xlink:href="vendors/@coreui/icons/svg/free.svg#cil-settings"></use>
            </svg></a>
                </li>
            </ul>

        </div>
        <div class="c-wrapper">
            <%- include ('layouts/navbar.ejs') %>
                <div class="c-body">
                    <main class="c-main">
                        <div class="container-fluid">
                            <div class="fade-in">

                                <div class="row">
                                    <div class="col-sm-6 col-lg-4">
                                        <div class="card text-white bg-gradient-primary">
                                            <div class="card-body card-body pb-0 d-flex justify-content-between align-items-start pb-4">
                                                <div>
                                                    <div class="text-value-lg cv-widget-revenue">₱ <span class="amount">0</span></div>
                                                    <div>Cadence Visual Revenue</div>
                                                </div>
                                            </div>
                                            <div class="c-chart-wrapper mt-3" style="height:70px;">
                                                <canvas class="chart" id="card-chart1" height="70"></canvas>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-sm-6 col-lg-4">
                                        <div class="card text-white bg-gradient-success">
                                            <div class="card-body card-body pb-0 d-flex justify-content-between align-items-start pb-4">
                                                <div>
                                                    <div class="text-value-lg cv-widget-remaining">₱ <span class="amount">0</span></div>
                                                    <div>Cadence Visual Remaining Balance</div>
                                                </div>
                                            </div>
                                            <div class="c-chart-wrapper mt-3" style="height:70px;">
                                                <canvas class="chart" id="card-chart2" height="70"></canvas>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-sm-6 col-lg-4 col-md-12">
                                        <div class="card text-white bg-gradient-danger">
                                            <div class="card-body card-body pb-0 d-flex justify-content-between align-items-start pb-4">
                                                <div>
                                                    <div class="text-value-lg cv-widget-expenses">₱ <span class="amount">0</span></div>
                                                    <div>Cadence Visual Expenses</div>
                                                </div>
                                            </div>
                                            <div class="c-chart-wrapper mt-3" style="height:70px;">
                                                <canvas class="chart" id="card-chart3" height="70"></canvas>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="dropdown-divider mt-1 mb-4"></div>
                                <div class="card m-0">
                                    <div class="card-header">
                                        <div class="row">
                                            <div class="d-inline col-8">
                                                <h6 style="position: absolute; top: 50%; transform: translate(0%, -50%);">Cadence Visual Expenses</h6>
                                            </div>

                                            <div class="d-inline text-right col-4 w-100">
                                                <button class="btn btn-sm btn-primary" data-toggle="modal" data-target="#modal_expense" onclick="$(`#modal_expense .modal-title`).text(`Add New Expense`); $(`#modal_expense #_modal_id`).val(''); $(`#modal_expense .proj_delete_btn`).addClass('hidden'); expenseModalReset();">
                                            <svg class="c-icon d-inline">
                                                <use xlink:href="vendors/@coreui/icons/svg/free.svg#cil-plus">
                                                </use>
                                            </svg>
                                            <span class="d-none d-lg-inline">Add New Expense</span>
                                        </button>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="card-body table-responsive">
                                        <table class="table table-striped table-bordered w-100" id="cv-expenses-table">
                                            <thead class="table-header-color">
                                                <th style="text-align: center; cursor: pointer;">No.</th>
                                                <th style="text-align: center; cursor: pointer;">Date</th>
                                                <th style="text-align: center; cursor: pointer;">Account</th>
                                                <th style="text-align: center; cursor: pointer;">Category</th>
                                                <th style="text-align: center; cursor: pointer;">Notes</th>
                                                <th style="text-align: center; cursor: pointer;">Amount</th>
                                            </thead>
                                            <tbody>

                                            </tbody>
                                        </table>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </main>
                </div>
        </div>
        <%- include ('resources/scripts') %>
            <script type="text/javascript" src="js/views/budget.js"></script>
            <%- include ('modals/projbudget') %>
                <%- include ('modals/expense') %>

</body>
