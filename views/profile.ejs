                                        <img class="cv-avatar-lg cv-user-avatar mb-5" src="images/<%- (user.avatar) ? user.id: 'avatar' %>.jpg">
                                        <h2 class="cv-user-name mb-1"></h2>
                                        <h5 class="cv-user-position font-italic"></h5>
                                    </div>

                                </div>

                            </div>
                        </div>
                    </main>
                </div>
        </div>
        <%- include ('resources/scripts') %>

</body>
<script>
    $(document).ready(function() {
        $('.cv-user-name').text(`${sessioned_user.name.first} ${sessioned_user.name.last}`)
        $('.cv-user-position').text(`${sessioned_user.position}`)
    })
</script>

