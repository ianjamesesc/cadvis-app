<div class="modal fade" id="modal_allocation_view" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" style="display: table-cell; vertical-align: middle;">Project Preview</h5>
                <p class="modal-id d-none"></p>
            </div>
            <div class="modal-body text-left">

                <div class="row">
                    <div class="col-12 py-0 px-3 mb-3 actions-section">
                        <div class="card bg-transparent mb-3 h-100">
                            <div class="card-header">
                                <div class="row">
                                    <div class="d-inline col-10">
                                        <h6 style="position: absolute; top: 50%; transform: translate(0%, -50%);">Percentage Allocation&nbsp;[ <span class="percentage-remaining"></span>% ]</h6>
                                    </div>

                                    <div class="d-inline text-right col-2 w-100">
                                        <button class="btn btn-sm btn-primary budget-add-btn" onclick="addAllocationModalRow()">
                                    <svg class="c-icon d-inline">
                                        <use xlink:href="vendors/@coreui/icons/svg/free.svg#cil-plus">
                                        </use>
                                    </svg>
                                </button>
                                    </div>
                                </div>
                            </div>
                            <div class="card-body text-right pt-3 px-3 pb-0">



                            </div>
                        </div>
                    </div>
                </div>


                <div class="form-row">
                    <div class="form-group col-md-6 col-12">
                        <label for="inputAddress">Date Created</label>
                        <input type="date" class="form-control" id="created" readonly>
                    </div>
                    <div class="form-group col-md-6 col-12">
                        <label>Visible</label>
                        <select class="custom-select form-control" id="visibility">
                            <option value="t">True</option>
                            <option value="f">False</option>
                        </select>
                    </div>
                </div>

            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" style="min-width: 100px;" data-dismiss="modal">Close</button>
                <button class="btn btn-primary" style="min-width: 100px;">Save</button>
            </div>
        </div>
    </div>
</div>


