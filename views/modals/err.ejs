<div class="modal fade" id="_modal_add_personal_schedule" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-md modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add Personal Schedule</h5>
                <p class="modal-id d-none"></p>
            </div>
            <div class="modal-body text-center">
                <div class="form-row">
                    <div class="form-group col-12 text-left">
                        <label>Title</label>
                        <input list="coordinators" autocomplete="off" type="text" class="form-control" id="title" value="">
                    </div>

                    <div class="form-group col-12 text-left">
                        <label>Type</label>
                        <select class="custom-select form-control" id="type">
                            <option value="errand">Errand</option>
                            <option value="event">Event</option>
                        </select>
                    </div>

                    <div class="form-group col-12 text-left">
                        <label>Frequency</label>
                        <select class="custom-select form-control" id="recur">
                            <option value="once">Once</option>
                            <option value="dyly">Daily</option>
                            <option value="wkly">Weekly</option>
                            <option value="mtly">Monthly</option>
                            <option value="yrly">Yearly</option>
                        </select>
                    </div>

                    <div class="form-group col-12 text-left">
                        <label>Start Date</label>
                        <input type="date" class="form-control" id="date_start" placeholder="Start">
                    </div>

                    <div class="form-group col-12 text-left">
                        <label>End Date</label>
                        <input type="date" class="form-control" id="date_end" placeholder="End">
                    </div>

                    <div class="form-group col-12 pb-3 text-left">
                        <label>Description</label>
                        <textarea type="text" autocomplete="off" type="text" id="description" class="form-control h-100 w-100 mb-0"></textarea>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" data-id="" row-id="" class="btn btn-sm btn-danger mx-1" style="position: absolute; left: 12px">
                    <svg class="c-icon">
                        <use xlink:href="vendors/@coreui/icons/svg/free.svg#cil-trash"></use>
                      </svg>
                </button>
                <button class="btn btn-secondary" style="min-width: 100px;" data-dismiss="modal">Close</button>
                <button class="btn btn-primary" style="min-width: 100px;">Save</button>
            </div>
        </div>
    </div>
</div>

