<!-- Modal -->
<div class="modal fade cd-example-modal-xl" id="modal_projview" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl modal-dialog-centered" role="document">
        <div class="modal-content w-100">
            <div class="modal-header p-2 px-4">
                <h5 class="modal-title py-2" id="proj-view-title"><span class="title">Create New Project</span><span class="project_id"></span></h5>
                <div class="text-right py-1 view-only">
                    <p class="text-muted m-0 d-block" id="project-date-created"></p>
                    <small class="text-muted d-block" style="margin-top: -3px;">Date Added</small>
                </div>
            </div>
            <div class="modal-body">
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label>Project Name</label>
                        <input list="coordinators" autocomplete="off" type="text" class="form-control" id="_modal_proj_name" value="">
                    </div>

                    <div class="form-group col-md-3">
                        <label>Project Type</label>
                        <select class="custom-select form-control proj_type" id="_modal_proj_type" onchange="changeEventType(this)">
                        </select>
                    </div>

                    <div class="form-group col-md-3">
                        <label for="inputPassword4">Location</label>
                        <input list="locations" type="text" class="form-control proj_location" id="_modal_proj_location">
                        <datalist id="locations">
                        </datalist>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-md-6 pre_event_days start">
                        <label for="inputAddress">Pre-<span class="_proj_event_type"></span> Shoot Date&nbsp;
                            <span class="reset-date-btn" style="cursor: pointer;" onclick="$('#_modal_proj_pre_event_date_start, #_modal_proj_pre_event_date_end').val(''); $('#_modal_proj_event_date').removeAttr('min'); projectModalChanges()"><svg class="c-icon mb-1">
                                <use xlink:href="vendors/@coreui/icons/svg/free.svg#cil-reload"></use>
                              </svg></span></label>
                        <input type="date" class="form-control proj_pre_event_date_start" id="_modal_proj_pre_event_date_start" onchange="setMinimumDate(this)" placeholder="Start">
                    </div>

                    <div class="form-group col-md-3 d-none pt-1 pre_event_days end">
                        <label></label>
                        <input type="date" class="form-control proj_pre_event_date_end mt-1" id="_modal_proj_pre_event_date_end" placeholder="End">
                    </div>

                    <div class="form-group col-md-3">
                        <label for="inputAddress"><span class="_proj_event_type"></span> Date&nbsp;
                        <span class="reset-date-btn" style="cursor: pointer;" onclick="$('#_modal_proj_event_date').val(''); projectModalChanges()"><svg class="c-icon mb-1">
                            <use xlink:href="vendors/@coreui/icons/svg/free.svg#cil-reload"></use>
                          </svg></span></label>
                        <input type="date" class="form-control proj_event_date" id="_modal_proj_event_date" onchange="$('#_modal_proj_pre_event_date_start').attr('max', $('#_modal_proj_event_date').val()); $('#_modal_proj_pre_event_date_end').attr('max', $('#_modal_proj_event_date').val())">
                    </div>

                    <div class="form-group col-md-3">
                        <label>Status</label>
                        <select class="custom-select form-control proj_status" id="_modal_proj_status" onchange="changeStatusBorderColor(this)">
                        </select>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-lg-3 col-6">
                        <label>Down Payment</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text">₱</span>
                            </div>
                            <input type="text" autocomplete="off" class="form-control proj_initial text-right _modal_proj_amounts" id="_modal_proj_initial" onblur="toggleCurrencyFormat(this, true)" onfocus="toggleCurrencyFormat(this, false)" onclick="this.select()">
                        </div>
                    </div>

                    <div class="form-group col-lg-3 col-6">
                        <label>Package</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text">₱</span>
                            </div>
                            <input class="form-control proj_package text-right _modal_proj_amounts" id="_modal_proj_package" type="text" onblur="toggleCurrencyFormat(this, true)" onfocus="toggleCurrencyFormat(this, false)" onclick="this.select()">
                        </div>
                    </div>

                    <div class="form-group col-lg-3 col-6">
                        <label>Drive Location</label>
                        <select class="custom-select form-control proj_drive_location" id="_modal_proj_drive_location">
                        </select>
                    </div>

                    <div class="form-group col-lg-3 col-6 pt-0">
                        <label for="inputAddress" class="mb-0">Other Options</label>
                        <br>
                        <div class="form-check d-block">
                            <input class="form-check-input proj_direct_booking" id="_modal_proj_direct_booking" type="checkbox" onchange="toggleDirectBooking(this)">
                            <label class="form-check-label" for="defaultCheck1">Direct Booking</label>
                        </div>
                        <div class="form-check d-block">
                            <input class="form-check-input proj_multiday" id="_modal_proj_multiday" type="checkbox" onchange="togglePreEventMultiDay()">
                            <label class="form-check-label" for="defaultCheck1"><span class="d-none d-md-inline">Pre-<span class="_proj_event_type"></span></span> Workcation</label>
                        </div>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label>Percentage Allocation</label>
                        <select class="custom-select form-control proj_allocation" id="_modal_proj_allocation">
                        </select>
                    </div>

                    <div class="form-group col-md-6">
                        <label>Project Head</label>
                        <select class="custom-select form-control proj_head" id="_modal_proj_head">
                        </select>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-md-6 col-sm-12 pb-3">
                        <label>Notes</label>
                        <textarea type="text" autocomplete="off" type="text" class="form-control h-100 mb-0" id="_modal_proj_notes"></textarea>
                    </div>

                    <div class="form-group col-md-6 col-sm-12 mb-0 pt-3" style="padding-bottom: 3px!important;">
                        <div class="card bg-transparent h-100">
                            <div class="card-header px-3 py-4">
                                <div class="h-100" style="position: relative;">
                                    <h6 class="d-inline" style="position: absolute; top: 50%; transform: translate(0%, -50%);">Additional Shooting Dates</h6>
                                    <button class="btn btn-sm btn-primary d-inline" style="position: absolute; right: 0%; top: 50%; transform: translate(0%, -50%);" onclick="addSubEvent()">
                                        <svg class="c-icon d-inline">
                                            <use xlink:href="vendors/@coreui/icons/svg/free.svg#cil-plus">
                                            </use>
                                        </svg>
                                    </button>
                                </div>

                            </div>
                            <div class="card-body additional-event-dates py-3 px-3 align-middle">
                                <datalist id="sub_event_list"></datalist>
                                <table class="w-100 m-0" id="tbl_sub_events">

                                </table>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="dropdown-divider"></div>

                <!-- Inclusions -->
                <div class="row py-0 px-3">
                    <div class="col-sm-12 px-1 py-2 row-inclusions">
                        <div class="card bg-transparent inclusions h-100">
                            <div class="card-header px-3">
                                <b>Inclusions</b>
                            </div>
                            <div class="card-body text-md-center p-3 text-sm-left" style="text-transform: uppercase; font-style: italic; font-weight: bold;">

                            </div>
                        </div>
                    </div>

                    <div class="col-sm-12 px-1 py-2 row-inclusions">
                        <div class="card bg-transparent h-100">
                            <div class="card-header px-3">
                                <b>Outputs Progress</b>
                            </div>
                            <div class="card-body p-3 text-left progress_outputs" style="text-transform: uppercase; font-style: italic; font-weight: bold;">

                            </div>
                        </div>
                    </div>
                </div>

                <div class="row py-0 px-3 pb-3">
                    <div class="col-12 col-md-6 px-1 py-2">
                        <div class="card bg-transparent px-3 h-100">
                            <div class="modal-header px-0">
                                <b>Partner Suppliers</b>
                            </div>
                            <div class="modal-body text-center p-0 p-sm-0">
                                <table class="table table-bordered table-sm" id="_modal_proj_suppliers">
                                    <thead class="table-header-color">
                                        <th width="40%">Description</th>
                                        <th colspan="3">Name</th>
                                    </thead>
                                    <tbody>

                                    </tbody>
                                    <tfoot>
                                        <td class="p-0" colspan="4">
                                            <button type="button" class="btn btn-primary w-100 m-0 no-b-radius" onclick="addNewSupplier()">Add Supplier</button>
                                        </td>
                                    </tfoot>
                                </table>
                                <datalist id="list_jobs">
                                    </datalist>
                                <datalist id="list_suppliers">
                                    </datalist>
                            </div>
                        </div>
                    </div>

                    <div class="col-12 col-md-6 px-1 py-2">
                        <div class="card bg-transparent px-3 h-100">
                            <div class="modal-header px-0">
                                <b>Manpower</b>
                            </div>
                            <div class="modal-body p-0 p-sm-0">
                                <div class="d-block py-2">
                                    <table style="width: 100%;">
                                        <tr>
                                            <td class="pl-0 pr-1" width="100%">
                                                <input list="filmmakers" class="form-control" type="text" onchange="addShooter(this)" placeholder="Multiple names must be separated by slash (/)">
                                                <datalist id="filmmakers">
                                                </datalist>
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                                <div class="d-block container name-container w-100 py-2 text-center px-0" id="_modal_proj_filmmakers" style="display: table-cell; vertical-align: middle;">

                                </div>

                            </div>
                        </div>
                    </div>
                </div>

                <div class="dropdown-divider"></div>

                <div class="row px-3">
                    <div class="card-group mt-3 px-2 col-12 mb-md-0 mb-sm-0">
                        <div class="card bg-transparent">
                            <div class="card-body">
                                <div class="text-value-lg" id="card-group-payment-status"></div><small class="text-muted text-uppercase font-weight-bold">Payment Status</small>
                            </div>
                        </div>

                        <div class="card bg-transparent">
                            <div class="card-body">
                                <div class="text-value-lg" id="card-group-package-amount">₱ <span class="amount">0</span></div><small class="text-muted text-uppercase font-weight-bold">Package Amount</small>
                            </div>
                        </div>

                        <div class="card bg-transparent">
                            <div class="card-body">
                                <div class="text-value-lg" id="card-group-total-received">₱ <span class="amount">0</span></div><small class="text-muted text-uppercase font-weight-bold">Total Received</small>
                            </div>
                        </div>

                        <div class="card bg-transparent">
                            <div class="card-body">
                                <div class="text-value-lg" id="card-group-remaining-balance">₱ <span class="amount">0</span></div><small class="text-muted text-uppercase font-weight-bold">Remaining Balance</small>
                            </div>
                        </div>
                    </div>

                    <div class="card-group mt-3 px-2 col-12 mb-md-3 mb-sm-0" id="card_group">
                        <div class="card bg-transparent" id="card-group-expenses">
                            <div class="card-body">
                                <div class="text-value-lg">₱ <span class="amount">0</span></div><small class="text-muted text-uppercase font-weight-bold">Expenses</small>
                                <div class="progress progress-xs mt-3 mb-0">
                                    <div class="progress-bar bg-gradient-danger" role="progressbar" style="width: 100%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
                                </div>
                            </div>
                        </div>

                        <div class="card bg-transparent" id="card-group-revenue">
                            <div class="card-body">
                                <div class="text-value-lg">₱ <span class="amount">0</span></div><small class="text-muted text-uppercase font-weight-bold">Revenue</small>
                                <div class="progress progress-xs mt-3 mb-0">
                                    <div class="progress-bar bg-gradient-success" role="progressbar" style="width: 100%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
                                </div>
                            </div>
                        </div>
                    </div>


                    <datalist id="budget-debit-descriptions"></datalist>
                    <datalist id="budget-credit-descriptions"></datalist>

                    <div class="col-lg-6 col-md-12 col-sm-12 p-0 px-2 mb-3">
                        <div class="card card-debit bg-transparent mb-3 h-100">
                            <div class="card-header">
                                <div class="row">
                                    <div class="d-inline col-10">
                                        <h6 style="position: absolute; top: 50%; transform: translate(0%, -50%);">Debit</h6>
                                    </div>

                                    <div class="d-inline text-right col-2 w-100">
                                        <button class="btn btn-sm btn-primary budget-add-btn" onclick="addBudgetRow(this, `dr`)">
                                    <svg class="c-icon d-inline">
                                        <use xlink:href="vendors/@coreui/icons/svg/free.svg#cil-plus">
                                        </use>
                                    </svg>
                                </button>
                                    </div>
                                </div>
                            </div>
                            <div class="card-body table-responsive">
                                <table class="table table-sm table-striped table-bordered mb-0">
                                    <thead class="table-header-color">
                                        <tr>
                                            <th style="text-align: center; cursor: pointer;">Date</th>
                                            <th style="text-align: center; cursor: pointer;">Description</th>
                                            <th style="text-align: center; cursor: pointer;" colspan="2">Amount</th>
                                        </tr>
                                    </thead>
                                    <tbody>

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-6 col-md-12 col-sm-12 p-0 px-2 mb-3">
                        <div class="card card-credit bg-transparent mb-3 h-100">
                            <div class="card-header">
                                <div class="row">
                                    <div class="d-inline col-10">
                                        <h6 style="position: absolute; top: 50%; transform: translate(0%, -50%);">Credit</h6>
                                    </div>

                                    <div class="d-inline text-right col-2 w-100">
                                        <button class="btn btn-sm btn-primary budget-add-btn" onclick="addBudgetRow(this, `cr`)">
                                    <svg class="c-icon d-inline">
                                        <use xlink:href="vendors/@coreui/icons/svg/free.svg#cil-plus">
                                        </use>
                                    </svg>
                                </button>
                                    </div>
                                </div>
                            </div>
                            <div class="card-body table-responsive">
                                <table class="table table-sm table-striped table-bordered mb-0">
                                    <thead class="table-header-color">
                                        <tr>
                                            <th style="text-align: center; cursor: pointer;">Date</th>
                                            <th style="text-align: center; cursor: pointer;">Description</th>
                                            <th style="text-align: center; cursor: pointer;" colspan="2">Amount</th>
                                        </tr>
                                    </thead>
                                    <tbody>

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                    <div class="col-12 p-0 px-2 mb-3 actions-section">
                        <div class="card bg-transparent mb-3 h-100">
                            <div class="card-header">
                                <h6 class="m-0">Actions</h6>
                            </div>
                            <div class="card-body text-right pt-3 px-3 pb-0">

                                <textarea class="form-control m-0" id="project-payment-details" style="opacity: 0!important; height: 0px!important; resize: none; position: absolute; z-index: -99"></textarea>
                                <textarea class="form-control m-0" id="project-full-details" style="opacity: 0!important; height: 0px!important; resize: none; position: absolute; z-index: -99"></textarea>
                                <textarea class="form-control m-0" id="project-basic-details" style="opacity: 0!important; height: 0px!important; resize: none; position: absolute; z-index: -99"></textarea>

                                <button class="btn btn-sm btn-info m-0" id="details-basic-copy-btn" data-clipboard-action="copy" data-clipboard-target="#project-basic-details">
                                    <svg class="c-icon mb-1">
                                        <use xlink:href="vendors/@coreui/icons/svg/free.svg#cil-clipboard"></use>
                                      </svg>
                                    &nbsp;Copy Basic Details
                                </button>

                                <button class="btn btn-sm btn-info m-0" id="details-full-copy-btn" data-clipboard-action="copy" data-clipboard-target="#project-full-details">
                                    <svg class="c-icon mb-1">
                                        <use xlink:href="vendors/@coreui/icons/svg/free.svg#cil-clipboard"></use>
                                      </svg>
                                    &nbsp;Copy Full Details
                                </button>

                                <button class="btn btn-sm btn-info m-0" id="details-payment-copy-btn" data-clipboard-action="copy" data-clipboard-target="#project-payment-details">
                                    <svg class="c-icon mb-1">
                                        <use xlink:href="vendors/@coreui/icons/svg/free.svg#cil-money"></use>
                                      </svg>
                                    &nbsp;Copy Payment Details
                                </button>

                                <button class="btn btn-sm btn-info m-0" disabled>
                                    <svg class="c-icon mb-1">
                                        <use xlink:href="vendors/@coreui/icons/svg/free.svg#cil-print"></use>
                                      </svg>
                                    &nbsp;Print
                                </button>

                            </div>
                        </div>
                    </div>

                </div>

                <div class="modal-footer pb-0 px-0">
                    <div class="d-inline mb-0" style="text-align: right; position: relative; width: 100%;">
                        <button type="button" data-id="" row-id="" class="btn btn-sm btn-danger proj_delete_btn mx-1" style="position: relative; float: left; margin-left: 2px; margin-right: 2px;">
                            <svg class="c-icon">
                                <use xlink:href="vendors/@coreui/icons/svg/free.svg#cil-trash"></use>
                              </svg>
                        </button>
                        <button type="button" onclick="projectModalReset()" class="btn btn-sm btn-secondary proj_reset_btn mx-1" style="position: relative; float: left; margin-left: 2px; margin-right: 2px;">
                            <svg class="c-icon">
                                <use xlink:href="vendors/@coreui/icons/svg/free.svg#cil-reload"></use>
                              </svg>
                        </button>

                        <button type="button" class="btn btn-secondary proj_cancel_btn" style="margin-left: 2px; margin-right: 2px;" data-dismiss="modal">Cancel</button>
                        <button type="button" class="btn btn-primary proj_submit_btn" style="margin-left: 2px; margin-right: 2px;">Create</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>