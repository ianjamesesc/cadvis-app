<html lang="en">

<head>
    <%- include ('resources/head') %>
        <title>Cadence Visual</title>
</head>

<body class="c-app flex-row align-items-center">
    <div aria-live="polite" aria-atomic="true" style="position: relative; min-height: 200px;">
        <div class="toast" style="position: absolute; top: 0; right: 0;">
            <div class="toast-header">
                <svg class="bd-placeholder-img rounded mr-2" width="20" height="20" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" role="img"><rect width="100%" height="100%" fill="#007aff"/></svg>

                <strong class="mr-auto">Bootstrap</strong>
                <small>11 mins ago</small>
                <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
            </div>
            <div class="toast-body">
                Hello, world! This is a toast message.
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-4 col-sm-12">
                <div class="card-group">
                    <div class="card p-4">
                        <div class="card-body">
                            <div class="mt-5 mb-5 pb-3" style="text-align: center;">
                                <img id="login-brand" src="logo/cv-logo-.png" style="width: 60%;">
                            </div>
                            <h1>Login</h1>
                            <p class="text-muted">Sign In to your account</p>
                            <form id="form-login" method="POST" action="/">
                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><svg class="c-icon"><use xlink:href="vendors/@coreui/icons/svg/free.svg#cil-user"></use></svg></span>
                                    </div>
                                    <input class="form-control" id="text-username" name="username" type="text" placeholder="Email, Username or Mobile" required>
                                </div>

                                <div class="input-group mb-4">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><svg class="c-icon"><use xlink:href="vendors/@coreui/icons/svg/free.svg#cil-lock-locked"></use></svg></span>
                                    </div>
                                    <input class="form-control" id="text-password" type="password" name="password" placeholder="Password" required>
                                </div>
                            </form>
                            <div class="row">
                                <div class="col-12">
                                    <button class="btn btn-primary px-5 float-right ml-2" id="btn_login">Login</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <%- include ('resources/scripts') %>
        <script src="js/views/login.min.js"></script>
        <div class="toast" role="alert" aria-live="assertive" aria-atomic="true" style="position: absolute; z-index: 9999; left: 50%; top: 60px; transform: translate(-50%, -50%)">
            <div class="toast-header bg-success">
                <svg class="c-icon mfe-2 toast-icon">
            <use xlink:href="vendors/@coreui/icons/svg/free.svg#cil-check-alt"></use>
          </svg>
                <strong class="mr-auto toast-title">Success</strong>
                <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
            </div>
            <div class="toast-body toast-message">
                Hello, world! This is a toast message.
            </div>
        </div>
        <%- include ('modals/err') %>
</body>

</html>